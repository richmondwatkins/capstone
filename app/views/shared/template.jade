    if(user)
      form#logout(action='/logout', method='POST')
        button#logout Logout

    #template-nav
      if(user)
        h3= user.email

      a(href='/')
        span.glyphicon.glyphicon-home
        | Home
      a(href='/explore')
        span.glyphicon.glyphicon-globe
        | Explore

      a(href='/play')
        span.glyphicon.glyphicon-map-marker
        | Play

      a(href='/leaderboard')
        span.glyphicon.glyphicon-star
        | Leaderboard

      if(user)
        a(href='/create')
          span.glyphicon.glyphicon-plus
          | Create a Map

      a(href='/maps')
        span.glyphicon.glyphicon-move
        |User Created Maps

      if(user)
        a(href='/users/#{user.username}')
          span.glyphicon.glyphicon-user
          | My Profile

      if(!user)
        a#show-login(href='#')
          span.glyphicon.glyphicon-ok
          | Login
          form#login-home(action='/home/login', method='POST')
            input(type='email', name='email', placeHolder='Email')
            input(type='password', name='password', placeHolder='Password')
            button#submit-login Login

      if(!user)
        a#show-registration(href='#')
          span.glyphicon.glyphicon-refresh
          | Register
          form#register-home(action='/home/register', method='POST')
              .inputs
                input.form-control(type='email', name='email', placeHolder='Email')
                input.form-control(type='text', name='username', placeHolder='Username')
                input.form-control(type='password', name='password', placeHolder='Password')
              .explorer
                img(src='/img/amundsen.jpg')
                p Roald Amundsen
                input.radio(type='radio', name='explorer', value='/img/amundsen.jpg')
              .explorer
                img(src='/img/columbus.jpg')
                p Christopher Columbus
                input.radio(type='radio', name='explorer', value='/img/columbus.jpg')
              .explorer
                img(src='/img/cortes.jpg' )
                p Hernán Cortés
                input.radio(type='radio', name='explorer', value='/img/cortes.jpg')
              .explorer
                img(src='/img/darwin.jpg')
                p Charles Darwin
                input.radio(type='radio', name='explorer', value='/img/darwin.jpg')
              .explorer
                img(src='/img/magellan.jpg')
                p Ferdinand Magellan
                input.radio(type='radio', name='explorer', value='/img/magellan.jpg')
              .explorer
                img(src='/img/marcopolo.jpg')
                p Marco Polo
                input.radio(type='radio', name='explorer', value='/img/marcopolo.jpg')
              .input
                button#submit-registration Register

